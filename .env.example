# Next.js Public Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Next.js Server Environment Variables
# (These are only available on the server side)

# Database (for future backend integration)
# DATABASE_URL=postgresql://user:password@localhost:5432/webvitals

# Redis (for future backend integration)
# REDIS_URL=redis://localhost:6379

# JWT Secret (for future backend integration)
# JWT_SECRET=your-secret-key-here

# Email Service (for future backend integration)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# AWS Configuration (for future deployment)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=webvitals-storage

# Application
NODE_ENV=development
